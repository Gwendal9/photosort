{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PhotoSort",
  "version": "0.1.0",
  "identifier": "com.gwen.photosort",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PhotoSort - Tri intelligent de photos",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Application de tri et nettoyage intelligent de photos",
    "longDescription": "PhotoSort détecte les photos similaires grâce à l'intelligence artificielle et vous aide à nettoyer votre bibliothèque photo."
  }
}
