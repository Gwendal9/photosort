{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "dialog:default",
    "shell:default",
    "log:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**" },
        { "path": "$HOME/**" },
        { "path": "/mnt/**" },
        { "path": "/media/**" },
        { "path": "/" }
      ]
    }
  ]
}
